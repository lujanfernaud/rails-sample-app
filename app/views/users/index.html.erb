<% provide(:title, "Users") %>
<h1>Users</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="col-md-offset-3">
      <%= will_paginate %>
    </div>

    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= gravatar_for user, size: 50 %>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>

    <div class="col-md-offset-3">
      <%= will_paginate %>
    </div>

  </div>
</div>

